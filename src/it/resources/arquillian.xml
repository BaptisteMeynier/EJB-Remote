<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <!-- Sets the protocol which is how Arquillian talks and executes the tests inside the container -->
    <defaultProtocol type="Servlet 3.0"/>
    <group qualifier="wildfly-cluster" default="true">
        <!-- Configuration to be used when the WildFly managed profile is active -->
        <container qualifier="widlfly-managed-1" >
            <configuration>
                <property name="jbossHome">${jbossHome:target/node1/wildfly-8.2.1.Final}</property>
                <property name="httpPort">7979</property>
                <property name="allowConnectingToRunningServer">true</property>
            </configuration>
        </container>

        <!-- Configuration to be used when the WildFly managed profile is active -->
        <container qualifier="widlfly-managed-2" >
            <configuration>
                <property name="jbossHome">${jbossHome:target/node2/wildfly-8.2.1.Final}</property>
                <property name="httpPort">8080</property>
                <property name="allowConnectingToRunningServer">true</property>
                <property name="serverConfig">EjbRemotingStandalone.xml</property>
            </configuration>
        </container>
    </group>
</arquillian>

